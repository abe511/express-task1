head
  link(rel="stylesheet", href="../../stylesheets/style.css")
block content
  h1.header= title
  form.form-contact(action="/contacts/add" method="post")
    label(for="name") Name:
    br
    input.input-name(type="text" name="name")
    br
    label(for="phone") Phone:
    br
    input.input-phone(type="text" name="phone")
    br
    input.btn-save-contact(type="submit" value="Save")
    input.btn-cancel-contact(type="button" value="Cancel" onclick="history.back()")